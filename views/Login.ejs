<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Login.css">
    <link rel="stylesheet" href="/css/homePage_nav.css" />
    <link rel="stylesheet" href="/css/footer_styles.css" />
    <link rel="stylesheet" href="/css/res3.css">
    <link rel="stylesheet" href="css/res4.css">
    <link rel="shortcut icon" type="image/jpg" href="/resources/Vista Logos/logo-svg.svg"/>
    <script src="https://kit.fontawesome.com/21198450f8.js" crossorigin="anonymous"></script>
    <title>Login</title>
    <script>
        function checkbox_One(id)
        {
            for(let i=1;i<=2;i++)
            {
                document.getElementById("val"+i).checked = false;
            }
            document.getElementById(id).checked=true;
        }
    </script>
</head>

<body>

    <%- include('partials/navbar'); -%>
<br>
<div class="container_full">
    <div class="container">
        <div id="image-container">
            <img class="image" src="../resources/content-team-animate.svg">
        </div>
        <div class="login-card_container">
            <div class="login_card">
                <div class="login_card_header"></div>
                    <h1>Sign In</h1>
                    <div id="p"></div>
                <form action="/Login" method="post" class="login_card_form">
                    <div class="check_person">
                        <div class="checkbox1">
                            <h3>I am a :</h3>
                            <input type="checkbox" value="student" id="val1" name="WhoAreYou" onclick="checkbox_One(this.id)"><label for="WhoAreYou">Student</label>
                            <input type="checkbox" value="jobseeker" id="val2" onclick="checkbox_One(this.id)" name="WhoAreYou">    <label for="WhoAreYou">Job-Seeker</label>
                        </div>
                    </div>
                    <div class="form_item">
                        <input name="username" type="text" placeholder="Enter your Mail ID" required autofocus style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size: large;">
                    </div>
                    <div class="form_item">
                        <input name="password" type="password" placeholder="Password" required autofocus style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size: large;">
                    </div>
                    <div class="form_item_other">
                        <div class="checkbox">
                            <input type="checkbox" id="RememberMe">
                            <label for="RememberMe"> Remember Me</label>
                        </div>
                    </div>
                    <button type="submit">Sign in</button>
                </form>
    
                <div class="login_card_footer">
                    Don't have an Account? <a href="/#roles">Create a Account</a>
                </div>
                </div>
            </div>
        </div>
    </div>
    <br><br><br>
    <%- include('partials/footer'); -%>
    <script>
        const toggleMenuOpen = () => document.body.classList.toggle("open");
    </script>

    
</body>
</html>